<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_all"
    android:orientation="vertical"
    tools:context="com.yigu.shop.activity.addr.AddAddrActivity">

    <include layout="@layout/lay_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_45dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人"
            android:textColor="@color/shop_black"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/consignee_tv"
            style="@style/editViewStyle_normal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_45dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话"
            android:textColor="@color/shop_black"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/mobile_tv"
            style="@style/editViewStyle_normal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:inputType="phone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp" />

    <LinearLayout
        android:id="@+id/area_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_45dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="所在地区"
            android:textColor="@color/shop_black"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/area_tv"
            style="@style/textViewStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:clickable="false"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:minHeight="@dimen/text_height_45dp"
        android:paddingBottom="@dimen/margin_1"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp"
        android:paddingTop="@dimen/margin_1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:textColor="@color/shop_black"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/address_tv"
            style="@style/editViewStyle_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:inputType="textMultiLine"
            android:lineSpacingMultiplier="1.3"
            android:maxLength="70" />

    </LinearLayout>


     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="@dimen/text_height_45dp"
         android:gravity="center_vertical"
         android:background="@android:color/white"
         android:layout_marginTop="@dimen/margin_10dp"
         android:paddingLeft="@dimen/margin_10dp"
         android:visibility="invisible"
         >

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="设为默认地址"
             android:textSize="@dimen/text_normal"
             android:textColor="@color/shop_black"
              android:layout_centerVertical="true"
             />

         <ImageView
             android:id="@+id/iv_default"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_alignParentRight="true"
             android:src="@mipmap/sel_rect_black"
             android:layout_centerVertical="true"
             android:paddingLeft="@dimen/margin_10dp"
             android:paddingRight="@dimen/margin_10dp"
             />

     </RelativeLayout>

</LinearLayout>
