<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yigu.shop.activity.SettingActivity">

    <include
        layout="@layout/lay_header"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_below="@+id/lay_header"
        android:layout_above="@+id/exit"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height_50dp"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            >

            <TextView
                style="@style/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接收推送消息"
                android:layout_centerVertical="true"
                />

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/sb_text_state"
                style="@style/SwitchButtonStyle"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:textColor="#ffb229"
                android:textSize="16dp"
                app:kswTextOff="OFF"
                app:kswTextOn="ON"
                app:kswTintColor="#ffb229"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_line"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height_50dp"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            >

            <TextView
                style="@style/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于产品"
                android:layout_centerVertical="true"
                />

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/right"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_line"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height_50dp"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            >

            <TextView
                style="@style/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查更新"
                android:layout_centerVertical="true"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                >

                <TextView
                    style="@style/textViewStyle_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_gray"
                    android:text="目前已是最新版本"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right"
                    android:layout_marginLeft="20dp"
                    />

            </LinearLayout>



        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_line"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height_50dp"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            >

            <TextView
                style="@style/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户热线"
                android:layout_centerVertical="true"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                >

                <TextView
                    style="@style/textViewStyle_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_gray"
                    android:text="400-xxx-xxx"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right"
                    android:layout_marginLeft="20dp"
                    />

            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_50dp"
        android:background="@color/shop_orange"
        android:text="退    出"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_normal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        />

</RelativeLayout>
