<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yigu.shop.activity.ProductDetailActivity">

    <RelativeLayout
        android:id="@+id/lay_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_45dp"
        android:background="@mipmap/head_bg"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_back"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            />

        <android.support.design.widget.TabLayout
            android:id="@+id/tabShop"
            android:layout_width="220dp"
            android:layout_height="32dp"
            app:tabTextColor="#ffffff"
            app:tabSelectedTextColor="#fcb04e"
            app:tabIndicatorColor="#fcb04e"
            android:layout_centerInParent="true"
            >
        </android.support.design.widget.TabLayout>


        <ImageView
            android:id="@+id/purcase_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@mipmap/purcase"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            />

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/lay_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/dark_black"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/shop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >

                <TextView
                    style="@style/textViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺"
                    android:drawableTop="@mipmap/store"
                    android:gravity="center"
                    android:drawablePadding="2dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/collect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >
                <TextView
                    style="@style/textViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"
                    android:drawableTop="@mipmap/collection"
                    android:gravity="center"
                    android:drawablePadding="2dp"
                    />
            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="加入购物车"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="@color/shop_yellow"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="立即购买"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="@color/light_yellow"
            android:gravity="center"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/lay_bottom"
        android:layout_below="@+id/lay_header"
        >

    </FrameLayout>

</RelativeLayout>
