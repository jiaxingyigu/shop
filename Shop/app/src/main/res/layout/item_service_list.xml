<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        fresco:fadeDuration="2000"
        fresco:placeholderImage="@drawable/face_default"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:progressBarAutoRotateInterval="2000"
        fresco:progressBarImage="@mipmap/progress"
        fresco:progressBarImageScaleType="centerInside"
        fresco:actualImageScaleType="fitXY"
        fresco:roundAsCircle="true"
        android:layout_marginLeft="@dimen/margin_10dp"
        />

   <LinearLayout
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:gravity="center_vertical"
       android:layout_marginLeft="20dp"
       >

       <TextView
           android:id="@+id/name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=""
           android:textColor="@color/shop_black"
           android:textSize="@dimen/text_big_x"
           android:maxLines="1"
           android:ellipsize="end"
           />

       <TextView
           android:id="@+id/info"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="简介："
           android:textColor="@color/shop_black"
           android:textSize="@dimen/text_normal"
           android:layout_marginTop="15dp"
           android:maxLines="2"
           android:ellipsize="end"
           />

   </LinearLayout>

    <TextView
        android:id="@+id/send"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:text="点评"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/shop_red"
        android:background="@drawable/rectangle_solid_white_strike_red_5"
        android:gravity="center"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_3"
        />

</LinearLayout>