<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yigu.shop.activity.community.SelBoardActivity"
    >

    <include
        layout="@layout/lay_header"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lay_header"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="神功秘籍"
                android:textSize="@dimen/text_big_x"
                android:textColor="@color/shop_black"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >

                    <RadioButton
                        android:id="@+id/shebei"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="设备培训"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/shop_black"
                        android:drawableLeft="@drawable/selector_cb_sel_image"
                        android:drawablePadding="@dimen/margin_10dp"
                        android:padding="@dimen/margin_10dp"
                        />

                    <RadioButton
                        android:id="@+id/dushushe"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="读  书  社"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/shop_black"
                        android:drawableLeft="@drawable/selector_cb_sel_image"
                        android:drawablePadding="@dimen/margin_10dp"
                        android:padding="@dimen/margin_10dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >

                    <RadioButton
                        android:id="@+id/dipan"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="底盘培训"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/shop_black"
                        android:drawableLeft="@drawable/selector_cb_sel_image"
                        android:drawablePadding="@dimen/margin_10dp"
                        android:padding="@dimen/margin_10dp"
                        />

                    <RadioButton
                        android:id="@+id/shipin"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="视频教程"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/shop_black"
                        android:drawableLeft="@drawable/selector_cb_sel_image"
                        android:drawablePadding="@dimen/margin_10dp"
                        android:padding="@dimen/margin_10dp"
                        />


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="武林绝学"
                android:textSize="@dimen/text_big_x"
                android:textColor="@color/shop_black"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >

                    <RadioButton
                        android:id="@+id/chitai"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="吃胎案例"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/shop_black"
                        android:drawableLeft="@drawable/selector_cb_sel_image"
                        android:drawablePadding="@dimen/margin_10dp"
                        android:padding="@dimen/margin_10dp"
                        />

                    <RadioButton
                        android:id="@+id/doudong"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="抖动案例"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/shop_black"
                        android:drawableLeft="@drawable/selector_cb_sel_image"
                        android:drawablePadding="@dimen/margin_10dp"
                        android:padding="@dimen/margin_10dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >

                    <RadioButton
                        android:id="@+id/paopian"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="跑偏案例"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/shop_black"
                        android:drawableLeft="@drawable/selector_cb_sel_image"
                        android:drawablePadding="@dimen/margin_10dp"
                        android:padding="@dimen/margin_10dp"
                        />

                    <RadioButton
                        android:id="@+id/qita"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="其他案例"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/shop_black"
                        android:drawableLeft="@drawable/selector_cb_sel_image"
                        android:drawablePadding="@dimen/margin_10dp"
                        android:padding="@dimen/margin_10dp"
                        />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
