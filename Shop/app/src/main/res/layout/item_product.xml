<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp" android:layout_height="wrap_content"
    android:id="@+id/item_root"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        fresco:fadeDuration="2000"
        fresco:placeholderImage="@drawable/product_default"
        fresco:placeholderImageScaleType="fitXY"
        android:padding="3dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/rect_stroke_white__width_2"
        />

    <TextView
        android:id="@+id/title"
        style="@style/textViewStyle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="afasdfasdsdsdsdsdsdsdsdsdsdsdsdsdsdsdsdsdsdsdsdsdsd"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_below="@+id/image"
        android:layout_marginTop="@dimen/margin_1"
        android:paddingBottom="5dp"
        />

    <TextView
        android:id="@+id/intruduction"
        style="@style/textViewStyle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="afasdfasdsdsdsdsdsdsdsdsdsdsdsdsdsdsdsdsdsdsdsdsdsd"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_below="@+id/title"
        android:paddingBottom="@dimen/margin_1"
        />


</RelativeLayout>