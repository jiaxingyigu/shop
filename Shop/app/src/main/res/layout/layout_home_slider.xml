<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/slider_rl"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/index_viewpager"
            android:layout_width="match_parent"
            android:layout_height="180dp">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/guide_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/margin_2"
            >

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/background_all"
        android:orientation="horizontal"
        android:layout_below="@+id/slider_rl"
        android:gravity="center_vertical"
        >

        <TextView
            style="@style/textViewStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:drawableTop="@mipmap/order"
            android:gravity="center"
            android:drawablePadding="@dimen/margin_10dp"
            android:paddingTop="@dimen/margin_1"
            android:paddingBottom="@dimen/margin_1"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="69dp"
            android:background="@mipmap/divider"
            />

        <TextView
            style="@style/textViewStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="浏览记录"
            android:drawableTop="@mipmap/browse"
            android:gravity="center"
            android:drawablePadding="@dimen/margin_10dp"
            android:paddingTop="@dimen/margin_1"
            android:paddingBottom="@dimen/margin_1"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="69dp"
            android:background="@mipmap/divider"
            />

        <TextView
            style="@style/textViewStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="账号信息"
            android:drawableTop="@mipmap/account"
            android:gravity="center"
            android:drawablePadding="@dimen/margin_10dp"
            android:paddingTop="@dimen/margin_1"
            android:paddingBottom="@dimen/margin_1"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="69dp"
            android:background="@mipmap/divider"
            />

        <TextView
            style="@style/textViewStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="收货地址"
            android:drawableTop="@mipmap/addr"
            android:gravity="center"
            android:drawablePadding="@dimen/margin_10dp"
            android:paddingTop="@dimen/margin_1"
            android:paddingBottom="@dimen/margin_1"
            />


    </LinearLayout>

</RelativeLayout>