<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_all"
        >

        <RelativeLayout
            android:layout_width="match_parent" android:layout_height="120dp"
            android:background="@mipmap/shop_bg"
            >
            <!-- -->
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/head"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="12dp"
                fresco:fadeDuration="2000"
                fresco:placeholderImage="@mipmap/head"
                fresco:placeholderImageScaleType="fitXY"
                fresco:roundAsCircle="true"
                fresco:roundingBorderColor="@android:color/white"
                fresco:roundingBorderWidth="1dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="洗刷刷车行云东店"
                android:layout_marginTop="@dimen/margin_10dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_big"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/head"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >

                <TextView
                    style="@style/textViewStyle_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注的商品"
                    />

                <TextView
                    style="@style/textViewStyle_big_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="325"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_10dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:background="@color/divider_line"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >

                <TextView
                    style="@style/textViewStyle_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注的店铺"
                    />

                <TextView
                    style="@style/textViewStyle_big_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="325"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_10dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:background="@color/divider_line"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >

                <TextView
                    style="@style/textViewStyle_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浏览的记录"
                    />

                <TextView
                    style="@style/textViewStyle_big_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="325"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_10dp"
                    />

            </LinearLayout>

        </LinearLayout>
        <!--android:layout_marginTop="@dimen/margin_10dp"-->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            >

            <RelativeLayout
                android:id="@+id/rl_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_40dp"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingRight="@dimen/margin_10dp"
                >

                <TextView
                    style="@style/textViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的订单"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:id="@+id/rl_waitpay"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">


                    <TextView
                        style="@style/textViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="待付款"
                        android:drawableTop="@mipmap/payment"
                        android:gravity="center"
                        android:paddingTop="14dp"
                        />

                    <ImageView
                        android:id="@+id/iv_pay"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:src="@drawable/shape_circle_color_red"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="37dp"
                        android:visibility="gone"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_waitsend"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/textViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="待发货"
                        android:drawableTop="@mipmap/shipping"
                        android:paddingTop="14dp"
                        android:gravity="center"
                        />

                    <ImageView
                        android:id="@+id/iv_ship"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:src="@drawable/shape_circle_color_red"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="37dp"
                        android:visibility="gone"
                        />

               </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_waitreceive"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/textViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="待收货"
                        android:drawableTop="@mipmap/goods"
                        android:paddingTop="14dp"
                        android:gravity="center"
                        />

                    <ImageView
                        android:id="@+id/iv_shipped"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:src="@drawable/shape_circle_color_red"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="37dp"
                        android:visibility="gone"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_ordercomplete"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/textViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="完成"
                        android:drawableTop="@mipmap/complete"
                        android:paddingTop="14dp"
                        android:gravity="center"
                        />

                    <ImageView
                        android:id="@+id/iv_finished"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:src="@drawable/shape_circle_color_red"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="37dp"
                        android:visibility="gone"
                        />

               </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_help"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@android:color/white"
            >

            <ImageView
                android:id="@+id/iv_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/per_help"
                android:layout_centerVertical="true"
                />

            <TextView
                style="@style/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物帮助"
                android:layout_toRightOf="@+id/iv_help"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_line"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            />

        <RelativeLayout
            android:id="@+id/rl_addr"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            android:background="@android:color/white"
            >

            <ImageView
                android:id="@+id/iv_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/per_addr"
                android:layout_centerVertical="true"
                />

            <TextView
                style="@style/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地址"
                android:layout_toRightOf="@+id/iv_addr"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_line"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            />
        <RelativeLayout
            android:id="@+id/rl_collect"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            android:background="@android:color/white"
            >

            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/per_collection"
                android:layout_centerVertical="true"
                />

            <TextView
                style="@style/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的收藏"
                android:layout_toRightOf="@+id/iv_collect"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>




    </LinearLayout>

</ScrollView>

