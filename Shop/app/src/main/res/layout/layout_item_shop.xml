<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="200dp"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        fresco:fadeDuration="2000"
        fresco:placeholderImage="@drawable/product_default"
        fresco:placeholderImageScaleType="fitXY"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            android:text="asfasfasdf"
            android:ellipsize="end"
            android:lines="1"
            />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal"
            android:textColor="@color/light_gray"
            android:text="asfasfasdf"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/num_ll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_below="@+id/image"
        android:layout_marginTop="@dimen/margin_10dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/all_num"
                style="@style/textViewStyle_big_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="423"
                android:ellipsize="end"
                android:lines="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部宝贝"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/text_small"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginTop="3dp"
                />

        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/shop_black"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/new_num"
                style="@style/textViewStyle_big_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="423"
                android:ellipsize="end"
                android:lines="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上新宝贝"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/text_small"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginTop="3dp"
                />

        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/shop_black"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/follow_num"
                style="@style/textViewStyle_big_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="423"
                android:ellipsize="end"
                android:lines="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注人数"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/text_small"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginTop="3dp"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/shop"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:text="进入店铺"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/light_gray"
        android:background="@drawable/selector_stroke_soild_color_background"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/num_ll"
        android:layout_marginTop="@dimen/margin_3"
        />

</RelativeLayout>