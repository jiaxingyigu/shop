<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/margin_10dp"
    android:paddingRight="@dimen/margin_10dp"
    android:background="@android:color/white"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        fresco:fadeDuration="2000"
        fresco:placeholderImage="@drawable/face_default"
        fresco:placeholderImageScaleType="fitCenter"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_centerVertical="true"
        fresco:progressBarAutoRotateInterval="2000"
        fresco:progressBarImage="@mipmap/progress"
        fresco:progressBarImageScaleType="centerInside"
        fresco:retryImageScaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/image"
        >

        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_10dp"
            >

            <TextView
                android:id="@+id/content"
                style="@style/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排气自吸更强！自动开关机锂电池更放心自动开关机锂电池更放心自动开关机锂电池更放心"
                android:layout_marginTop="@dimen/margin_2"
                android:lines="2"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.2"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/goods_attr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="灰色款"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/text_small"
               android:maxLines="1"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/margin_10dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_1"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textSize="@dimen/text_normal"
                    android:textColor="@color/shop_red"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/shop_red"
                    android:textSize="@dimen/text_big_xx"
                    android:text="200"
                    android:textStyle="bold"
                    android:layout_marginLeft="2dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/shop_red"
                android:textSize="@dimen/text_big"
                android:text="X1"
                android:layout_marginTop="@dimen/margin_1"
                android:maxLines="1"
                android:ellipsize="end"
                />


        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"
        android:layout_alignParentBottom="true"
        android:id="@+id/view" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@+id/view"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp"
        android:layout_marginTop="247dp"
        android:visibility="gone"
        />


</RelativeLayout>